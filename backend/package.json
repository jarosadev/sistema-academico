{
  "name": "sonet-academic-backend",
  "version": "1.0.0",
  "description": "Sistema AcadÃ©mico - Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:init": "node scripts/init-database.js init",
    "db:reset": "node scripts/init-database.js reset",
    "db:test": "node scripts/init-database.js test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "check": "npm run lint && npm run test",
    "setup": "npm install && npm run db:init",
    "setup-complete": "node scripts/setup-complete.js",
    "install-audit": "node scripts/install-auditoria.js",
    "test-api": "node scripts/test-complete-api.js",
    "test-login": "node scripts/test-login.js",
    "check-roles": "node scripts/check-admin-roles.js",
    "demo": "node scripts/final-demo.js",
    "logs": "tail -f logs/app.log",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "academic",
    "express",
    "mysql",
    "jwt",
    "api",
    "university"
  ],
  "author": "Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "bugs": {
    "url": "https://github.com"
  },
  "homepage": "https://github.com",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!scripts/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}